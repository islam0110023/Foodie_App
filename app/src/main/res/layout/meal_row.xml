<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/click"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/rounded_text"
    android:backgroundTint="#2D4351"
    android:forceHasOverlappingRendering="true"
    android:hapticFeedbackEnabled="true"
    android:outlineProvider="bounds"
    android:overScrollMode="always"
    android:paddingBottom="5dp"
    android:persistentDrawingCache="animation">

    <ImageView
        android:id="@+id/imgMeal"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/rounded_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:clipToOutline="true"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtMeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:barrierMargin="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgMeal"
        app:layout_constraintTop_toBottomOf="@+id/imgMeal" />

    <Button
        android:id="@+id/btnAddF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif-black"
        android:text="Add Favorite"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>